<?xml version="1.0" encoding="ISO-8859-1"?>
<!-- Server Configuration -->
<Server>

	<!-- 여러개의 포트를 Listen 할 수 있다. -->
	<Listen>
		<Port>80</Port>
		<!--
		<Port>81</Port>
		<Port>82</Port>
		-->
	</Listen>


	<!-- 쓰레드 풀의 크기. 동시에 접속할 수 있는 최대치이기도 하다. -->
	<ThreadPoolSize>32</ThreadPoolSize>


	<!-- 최대 접속대기 -->
	<ListenBacklog>100</ListenBacklog>


	<!-- 요청이 없는 클라이언트를 기다릴 시간. 초단위 -->
	<TimeOut>3</TimeOut>


	<!-- root 권한으로 실행할 시 보안상의 문제로 아래의 유저로 데몬을 구동한다 -->
	<ServerUser>nobody</ServerUser>


	<!-- 웹문서가 위치한 디렉토리 경로. 마지막에 / 로 끝나면 안됨. -->
	<DocumentRoot>htdocs</DocumentRoot>


	<!-- 클라이언트의 요청을 읽을 버퍼의 크기 -->
	<BufferSize>8K</BufferSize>


	<!-- mime 파일의 위치 -->
	<MimeFile>mime.types</MimeFile>


	<!-- 문서의 기본 인코딩 -->
	<DefaultCharSet>Korean</DefaultCharSet>


	<!-- 디렉토리가 요청 될 때, DirectoryIndex.Filename 에 등록된 순서대로 파일을 찾는다 -->
	<DirectoryIndex>
		<Filename>index.html</Filename>
		<Filename>main.html</Filename>
	</DirectoryIndex>


	<Log>
		<!-- 로그파일이 저장될 디렉토리 경로. -->
		<Path>logs</Path>

		<!-- 로그파일 자동 순환 여부. 기본값은 False. -->
		<Rotate>True</Rotate>

		<!-- 로그파일 순환 주기. 로그파일 순환이 활성화 되어 있어야 한다. -->
		<!-- H: 시간, D: 일, M: 개월                                      -->
		<!-- 예:  1H: 1시간, 12H: 12시간                                  -->
		<!--      1D: 1일  , 15D: 15일                                    -->
		<!--      1M: 1개월,  4M: 4개월, 1개월은 30일로 계산됨.           -->
		<!-- 단위로 자동으로 로그파일을 새로 생성한다.                    -->
		<RotateCycle>1M</RotateCycle>

		<!-- 호스트별 로그파일 분리 여부. 기본값은 False. -->
		<VirtualHostLogSplit>True</VirtualHostLogSplit>
	</Log>


	<!-- 여러개의 VirtualHost를 지정할 수 있다. VirtualHost가 사용할 포트는 위의 Listen.Port 로 등록되어야 한다.            -->
	<!-- 하나의 VirtualHost에는 하나의 호스트와 하나의 포트만을 사용할 수 있다.                                             -->
	<!-- 하나의 호스트에 여러개의 포토를 할당하고 서로 다른 DocumentRoot를 사용하려면 여러개의 VirtualHost를 등록해야 한다. -->
	<!--
	<VirtualHost>
		<Host>www1.domain.com</Host>
		<Port>81</Port>
		<DocumentRoot>htdocs/test1</DocumentRoot>
	</VirtualHost>

	<VirtualHost>
		<Host>www2.domain.com</Host>
		<Port>82</Port>
		<DocumentRoot>htdocs/test2</DocumentRoot>
	</VirtualHost>
	-->

</Server>
